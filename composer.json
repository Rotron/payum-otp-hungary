{
    "name": "konekt/payum-otp-hungary",
    "type": "library",
    "description": "Custom Payum gateway for OTP Bank - Hungary.",
    "keywords": ["payment", "otp", "payum"],
    "license": "MIT",
    "authors": [
        {
            "name": "Lajos Fazakas"
        }
    ],
    "require": {
        "payum/payum": "~1.0"
    },
    "require-dev": {
        "phpspec/phpspec": "~2.0",
        "monolog/monolog": "^1.18"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-4": { "Konekt\\PayumOtp\\": "src/" },
        "files": [ "src/Bridge/OtpSdk4/polyfill-php7.php" ]
    },
    "autoload-dev": {
        "psr-4": { "spec\\Konekt\\PayumOtp\\": "spec/" }
    }
}
